{% extends "layouts/base.html.j2" %}

{% block navigation %}
<nav class="navbar navbar-expand-lg ">
    <div class="container-fluid">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link "  href="/" >View Animals</a></li>
          <li class="nav-item"><a class="nav-link active current" aria-current="page" href="/add"> Add Animal </a></li>
      </ul>
    </div>
  </nav>
{% endblock navigation %}

{% block content %}
    <div class="card add-card container">
        <h2 > Add Animal</h2>
        <form action="/create" method="post">
            {{ form.csrf_token() }}                 {# Cant figure out how to change the styling of form fields, if needed? #}
            {{ form.name.label }}
            {{ form.name() }} <br><br>
            {{ form.image.label }}
            {{ form.image() }} <br><br>
            {{ form.region.label }}
            {{ form.region() }} <br><br>
            {{ form.predator.label }}
            {{ form.predator() }} <br><br>
            <button type="submit" class="btn ">Add Animal</button>
        </form>
    </div>
{% endblock content %}